<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#532AD1">

            <TextView
                android:id="@+id/name_of_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nabil Helmay Mansour"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:textSize="12dp"
                android:textColor="#ffffff"
                ></TextView>

            <TextView
                android:id="@+id/job_of_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3l2 El3lo2"
                android:layout_centerHorizontal="true"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:layout_below="@id/name_of_teacher"
                ></TextView>

            <TextView
                android:id="@+id/content_of_feed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="this is the sharmat team leader"
                android:layout_marginTop="2dp"
                android:textSize="12dp"
                android:textColor="#ffffff"
                android:layout_below="@id/job_of_teacher"
                ></TextView>

            <ImageView
                android:id="@+id/image_of_feed"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:src="@drawable/ic_teacher"
                android:layout_below="@+id/content_of_feed"
                android:layout_marginBottom="20dp"
                ></ImageView>

            <ImageView
                android:id="@+id/make_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment_on_feed"
                android:layout_below="@+id/image_of_feed"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                ></ImageView>

            <TextView
                android:id="@+id/number_of_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.5k"
                android:layout_below="@+id/image_of_feed"
                android:layout_toRightOf="@id/make_like"
                android:layout_marginRight="30dp"
                ></TextView>

            <ImageView
                android:id="@+id/make_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_comment_on_feed"
                android:layout_below="@+id/image_of_feed"
                android:layout_toRightOf="@id/number_of_likes"
                android:layout_marginRight="10dp"
                ></ImageView>

            <TextView
                android:id="@+id/number_of_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="300"
                android:layout_below="@+id/image_of_feed"
                android:layout_toRightOf="@id/make_comment"
                ></TextView>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>